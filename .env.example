# ============================================================================
# STOCK SIGNALLING BOT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to git - add to .gitignore
# ============================================================================

# REQUIRED: Upstox API Credentials
# Get from: https://upstox.com/account/api
UPSTOX_API_KEY=your_api_key_here
UPSTOX_API_SECRET=your_api_secret_here
UPSTOX_ACCESS_TOKEN=your_access_token_here

# REQUIRED: Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
# Get chat ID from @userinfobot on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# OPTIONAL: Bot Mode (default: LIVE)
# Options: LIVE, BACKTEST, PAPER, RESEARCH, ADHOC
BOT_MODE=LIVE

# OPTIONAL: Logging Level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
BOT_LOG_LEVEL=INFO

# OPTIONAL: Signal Quality Parameters
# Minimum reward-risk ratio (default: 1.5)
BOT_VALIDATION_MIN_RRR=1.5

# Maximum risk per trade as % of account (default: 1.0)
BOT_RISK_MAX_PER_TRADE_PCT=1.0

# Maximum daily loss % (default: 2.0)
BOT_RISK_MAX_DAILY_LOSS_PCT=2.0

# OPTIONAL: Dashboard Configuration
# Enable/disable live dashboard (default: true)
BOT_MONITORING_ENABLE_DASHBOARD=true

# Dashboard update frequency in seconds (default: 60)
BOT_MONITORING_DASHBOARD_UPDATE_FREQ=60

# OPTIONAL: Telegram Notifications
# Enable/disable signal alerts (default: true)
BOT_TELEGRAM_NOTIFY_SIGNALS=true

# Enable/disable daily summary (default: true)
BOT_TELEGRAM_NOTIFY_SUMMARY=true

# Enable/disable error alerts (default: true)
BOT_TELEGRAM_NOTIFY_ERRORS=true

# ============================================================================
# NOTE: After filling in your credentials, run these commands:
# 
# 1. Validate configuration:
#    python config.py
#
# 2. Test Telegram connection:
#    python telegram_notifier.py
#
# 3. Run backtest to verify setup:
#    BOT_MODE=BACKTEST python main.py
#
# 4. Once satisfied, run in LIVE mode:
#    python main.py
# ============================================================================
